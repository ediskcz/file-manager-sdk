root = true

[*]
charset = utf-8

# PHP PSR-2 Coding Standards
# http://www.php-fig.org/psr/psr-2/

[*.php]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.sql]
indent_style = space
indent_size = 2

[{*.yaml, *.yml}]
indent_style = space
indent_size = 4

[{composer.json, composer.lock}]
indent_style = space
indent_size = 4

[*.xml]
indent_size = 2
